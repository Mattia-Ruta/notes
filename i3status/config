general {
    colors = true
    color_good = "#a3be8c"
    color_degraded = "#ebcb8b"
    color_bad = "#bf616a"
    interval = 1
    separator = "|"
}

order += "disk /"                                                                                                                  
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "battery 0"
order += "ethernet enp34s0"
order += "wireless wlp1s0"
order += "time"

disk "/" {
    format = "Disk: %percentage_used used"
}

cpu_usage {
    format = "CPU: %usage"
    degraded_threshold = 85
    max_threshold = 95
}

